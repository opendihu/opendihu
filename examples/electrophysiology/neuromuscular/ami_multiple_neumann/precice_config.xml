<?xml version="1.0"?>

<precice-configuration>
  <!-- format for console output of precice -->
  <log>
    <sink type="stream" output="stdout"  filter='(%Severity% >= debug) and (not (%Function% = "advance"))' format="\033[0;33m%Rank% [precice]\033[0m %ColorizedSeverity%\033[0;33m%Message%\033[0m" enabled="true" />
  </log>

  <data:vector name="Velocity"/>
  <data:vector name="Displacement"/>
  <data:vector name="Traction"/>


  <mesh name="TendonMeshLeft" dimensions="3">
      <use-data name="Displacement"/>
      <use-data name="Velocity"/>
      <use-data name="Traction"/>
  </mesh>

  <mesh name="TendonMeshRight" dimensions="3">
      <use-data name="Displacement"/>
      <use-data name="Velocity"/>
      <use-data name="Traction"/>
  </mesh>

  <mesh name="MuscleMeshLeft" dimensions="3">
      <use-data name="Displacement"/>
      <use-data name="Velocity"/>
      <use-data name="Traction"/>
  </mesh>

  <mesh name="MuscleMeshRight" dimensions="3">
      <use-data name="Displacement"/>
      <use-data name="Velocity"/>
      <use-data name="Traction"/>
  </mesh>


  <participant name="TendonSolver"> 
    <provide-mesh name="TendonMeshLeft" />
    <provide-mesh name="TendonMeshRight" />
    <receive-mesh name="MuscleMeshLeft" from="MuscleSolverLeft"/>
    <receive-mesh name="MuscleMeshRight" from="MuscleSolverRight"/>

    <write-data name="Displacement"  mesh="TendonMeshRight"/>
    <write-data name="Velocity"  mesh="TendonMeshRight"/>
    <read-data  name="Traction"      mesh="TendonMeshRight"/>

    <write-data name="Displacement"  mesh="TendonMeshLeft"/>
    <write-data name="Velocity"  mesh="TendonMeshLeft"/>
    <read-data  name="Traction"      mesh="TendonMeshLeft"/>

    <mapping:nearest-neighbor direction="read" from="MuscleMeshLeft" to="TendonMeshLeft" constraint="consistent"/>
    <mapping:nearest-neighbor direction="read" from="MuscleMeshRight" to="TendonMeshRight" constraint="consistent"/>

    <export:vtu directory="preCICE-output" />
  </participant>

  <participant name="MuscleSolverLeft">
    <provide-mesh name="MuscleMeshLeft"  />
    <receive-mesh name="TendonMeshLeft"     from="TendonSolver"/>

    <read-data  name="Displacement"  mesh="MuscleMeshLeft"/>
    <read-data  name="Velocity"  mesh="MuscleMeshLeft"/>
    <write-data name="Traction"      mesh="MuscleMeshLeft"/>

    <mapping:nearest-neighbor direction="read" from="TendonMeshLeft" to="MuscleMeshLeft" constraint="consistent"/>
    <export:vtu directory="preCICE-output"/>
  </participant>
  
  <participant name="MuscleSolverRight">
    <provide-mesh name="MuscleMeshRight"  />
    <receive-mesh name="TendonMeshRight"     from="TendonSolver"/>

    <read-data  name="Displacement"  mesh="MuscleMeshRight"/>
    <read-data  name="Velocity"  mesh="MuscleMeshRight"/>
    <write-data name="Traction"      mesh="MuscleMeshRight"/>
    
    <mapping:nearest-neighbor direction="read" from="TendonMeshRight" to="MuscleMeshRight" constraint="consistent"/>
    <export:vtu directory="preCICE-output"/>
  </participant>

  <!-- Communication method, use TCP sockets, Change network to "ib0" on SuperMUC -->
  <m2n:sockets acceptor="TendonSolver" connector="MuscleSolverLeft" network="lo" />
  <m2n:sockets acceptor="TendonSolver" connector="MuscleSolverRight" network="lo" />

  <coupling-scheme:multi>
    <participant name="TendonSolver" control="yes"/>
    <participant name="MuscleSolverLeft" />
    <participant name="MuscleSolverRight" />

    <max-time value="20.0"/>          
    <time-window-size value="0.01"/>   

    <acceleration:IQN-ILS>
      <data name="Displacement" mesh="TendonMeshLeft"/>
      <data name="Velocity" mesh="TendonMeshLeft"/>
      <data name="Traction" mesh="MuscleMeshLeft"/>
      <data name="Displacement" mesh="TendonMeshRight"/>
      <data name="Velocity" mesh="TendonMeshRight"/>
      <data name="Traction" mesh="MuscleMeshRight"/>
      <preconditioner type="residual-sum"/>
      <filter type="QR2" limit="1e-3"/>
      <initial-relaxation value="0.1"/>
      <max-used-iterations value="40"/>
      <time-windows-reused value="15"/>
    </acceleration:IQN-ILS>

    <max-iterations value="25" />

    <relative-convergence-measure limit="1e-3" data="Displacement" mesh="TendonMeshLeft" strict="0"/>
    <relative-convergence-measure limit="1e-2" data="Velocity" mesh="TendonMeshLeft" strict="0"/>
    <absolute-convergence-measure limit="1e-1" data="Traction" mesh="MuscleMeshLeft" strict="0"/>

    <relative-convergence-measure limit="1e-3" data="Displacement" mesh="TendonMeshRight" strict="0"/>
    <relative-convergence-measure limit="1e-2" data="Velocity" mesh="TendonMeshRight" strict="0"/>
    <absolute-convergence-measure limit="1e-1" data="Traction" mesh="MuscleMeshRight" strict="0"/>

    <exchange data="Displacement" mesh="TendonMeshLeft" from="TendonSolver" to="MuscleSolverLeft"/>  
    <exchange data="Velocity" mesh="TendonMeshLeft" from="TendonSolver" to="MuscleSolverLeft"/>  
    <exchange data="Traction" mesh="MuscleMeshLeft" from="MuscleSolverLeft" to="TendonSolver"/>  

    <exchange data="Displacement" mesh="TendonMeshRight" from="TendonSolver" to="MuscleSolverRight"/>  
    <exchange data="Velocity" mesh="TendonMeshRight" from="TendonSolver" to="MuscleSolverRight"/>  
    <exchange data="Traction" mesh="MuscleMeshRight" from="MuscleSolverRight" to="TendonSolver"/>  
  </coupling-scheme:multi>

</precice-configuration>